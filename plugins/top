package top;
use strict;
use warnings;

sub start {
    $blosxom::path_info eq '';
}

sub filter {
    my ($pkg, $files, $others) = @_;

    for my $f (keys %$files) {
        (my $path = $f) =~ s/^$blosxom::datadir//;
        $path =~ s![^/]+\.[^/]+$!!;

        delete $files->{ $f } unless $path eq '/';
    }
}

1;
